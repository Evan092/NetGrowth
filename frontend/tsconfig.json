{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
      "baseUrl": ".",
      "paths": {
        "@/*": ["./*"]   // Define '@' alias to refer to the root directory
      },
      "target": "esnext",
      "module": "esnext",
      "jsx": "react-native",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    }
  
}
